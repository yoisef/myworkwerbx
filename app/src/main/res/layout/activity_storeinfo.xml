<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@color/appcolor"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/relativeLayout">

            <ImageView
                android:id="@+id/storeimg"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_shop"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addphototxt"

                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                 android:layout_below="@id/storeimg"
                android:gravity="center"
                android:text="@string/addphoto"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                />



        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:hint="@string/storenam"
            android:id="@+id/storernam"
            android:singleLine="true"
            android:gravity="start"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"

            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="0dp"
                android:hint="@string/address"
                android:id="@+id/addresss"
                android:singleLine="true"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:layout_weight="4"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/openplacepicker"
                android:src="@drawable/mapicon"
                android:padding="2dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/storeadmin"
            android:textColor="@color/black"
            android:hint="@string/entername"
            android:singleLine="true"
            android:gravity="start"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/storeemail"
            android:textColor="@color/black"
            android:hint="@string/enteremail"
            android:singleLine="true"
            android:gravity="start"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/storepass"
            android:hint="@string/empty_pass"
            android:singleLine="true"
            android:inputType="textPassword"
            android:gravity="start"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/storpassretype"
            android:hint="@string/retypepass"
            android:inputType="textPassword"
            android:singleLine="true"
            android:gravity="start"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/description"
            android:hint="@string/storedescription"
            android:inputType="textPassword"
            android:singleLine="true"
            android:gravity="start"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/deletcharge"
            android:hint="@string/delcharge"
            android:inputType="textPassword"
            android:singleLine="true"
            android:gravity="start"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content" />





    </LinearLayout>
</ScrollView>
    <Button
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:text="@string/subscripe"
        android:textSize="@dimen/large"
        android:textColor="@color/white"
        android:background="@drawable/gradientblue2"
        android:layout_height="wrap_content" />
</LinearLayout>