<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sales_history">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:text="@string/ordermenu"
            android:padding="10dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:gravity="center"
            android:textSize="@dimen/large"
            android:textColor="@color/white"
            android:background="@drawable/gradientblue2"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/saleshistoryrecucle"
            android:layout_height="0dp"
            android:layout_weight="1">

        </android.support.v7.widget.RecyclerView>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:padding="10dp"
           android:background="@drawable/gradientblue2"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:textSize="@dimen/large"
               android:gravity="center"
               android:text="@string/totalsales"
               android:textStyle="bold"
               android:textColor="@color/white"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_width="match_parent"
               android:gravity="center"
               android:id="@+id/totalsalescost"
               android:textSize="@dimen/large"
               android:text="0.000"
               android:textStyle="bold"
               android:textColor="@color/white"
               android:layout_height="wrap_content" />
       </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:background="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:text="@string/removehistory"
            android:textSize="@dimen/large"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/removehistory"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/gradientblue2"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>