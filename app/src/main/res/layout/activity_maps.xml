<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/appcolor"
            android:layout_height="0dp">
            <SearchView
                android:layout_width="match_parent"
                android:hint="@string/enterstorenum"
                android:id="@+id/storid"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/showstoredetails"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="5dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_shop"
                    android:padding="10dp"
                    android:id="@+id/storeimg"
                    android:layout_height="100dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:hint="@string/storenam"
                    android:id="@+id/retailernam"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textSize="@dimen/large"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:textSize="@dimen/large"
                    android:hint="@string/address"
                    android:gravity="center"
                    android:id="@+id/retailermobile"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content" />
                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    tools:context=".MapsActivity" />

            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:id="@+id/retailername"
                android:hint="@string/entername"
                android:singleLine="true"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:inputType="phone"
                android:id="@+id/retailemobile"
                android:hint="@string/entermoile"
                android:singleLine="true"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content" />
            <EditText

                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/retailerpass"
                android:hint="@string/empty_pass"
                android:singleLine="true"
                android:inputType="textPassword"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:id="@+id/retailerrepass"
                android:hint="@string/retypepass"
                android:singleLine="true"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:id="@+id/registerr"
        android:textSize="@dimen/large"
        android:text="@string/signup"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
</LinearLayout>
