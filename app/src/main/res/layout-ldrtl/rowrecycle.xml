<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="100dp">
    <com.daimajia.swipe.SwipeLayout
        android:layout_width="match_parent"
        android:id="@+id/myrow"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/background"
            android:paddingLeft="4dp"
            android:background="@drawable/gradientblue2"
            android:layout_height="110dp">


            <ImageView
                android:layout_width="30dp"
                android:id="@+id/xsign"
                android:layout_margin="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/deletesign"
                android:layout_centerVertical="true"
                android:layout_height="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/quedeleteitem"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/xsign"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:padding="3dp"
                android:textStyle="bold"
                android:id="@+id/deleterow"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:textColor="@color/blue3"
                android:fontFamily="serif"
                android:background="@color/appcolor"
                android:text="@string/ansdeleteitem"
                android:layout_centerVertical="true"

                android:layout_height="50dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/foregoroundd"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_height="match_parent"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_height="0dp"
                android:layout_weight="1">


                <RelativeLayout
                    android:id="@+id/productdetails"
                    android:padding="7dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/white"
                    android:orientation="horizontal" android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/lipton"
                        android:id="@+id/productimg"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_height="40dp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/layoutt"
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:id="@+id/nameproduct"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="lipton"
                            android:textSize="22sp"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:id="@+id/layoutlin"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="22sp"
                                android:textColor="@color/gray"
                                android:text="#"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="22sp"
                                android:id="@+id/numberproduct"
                                android:textColor="@color/gray"
                                android:text="776875765"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/itempricee"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:text="2"
                        android:layout_alignParentLeft="true"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_toRightOf="@id/itempricee"
                        android:background="@drawable/dollar"
                        android:layout_centerVertical="true"
                        android:layout_height="20dp" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:padding="10dp"
                    android:background="@color/white"
                    android:src="@drawable/deleteicon"
                    android:id="@+id/remove"
                    android:layout_gravity="center"
                    android:layout_height="match_parent" />


            </LinearLayout>
        </LinearLayout>









    </com.daimajia.swipe.SwipeLayout>
</android.support.v7.widget.CardView>
